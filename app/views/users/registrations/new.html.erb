<div class="container">

  <div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
      <!-- Nested Row within Card Body -->
      <div class="row">
        <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
        <div class="col-lg-7">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Tu préstamo en 5 minutos. Comencemos.</h1>
            </div>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'user'}) do |f| %>
              <%= f.error_notification %>
              <div class="form-group">
                <%= f.input :username,
                            required: true,
                            label: "Usuario",
                            input_html: { class: "form-control form-control-user" } %>
              </div>
              <div class="form-group">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email", class: "form-control form-control-user" }%>
              </div>
              <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                  <%= f.input :password,
                              required: true,
                              hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length),
                              input_html: { autocomplete: "new-password", class: "form-control form-control-user" } %>

                </div>
                <div class="col-sm-6">
                  <%= f.input :password_confirmation,
                              required: true,
                              label: "Confirma tu password",
                              input_html: { autocomplete: "new-password", class: "form-control form-control-user" } %>
                </div>
              </div>
              <%= f.button :submit, "Regístrate", class: 'btn btn-primary btn-user btn-block' %>
            <% end %>
            <hr>
            <div class="text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
