<div class="container">
  <!-- Outer Row -->
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <!-- Nested Row within Card Body -->
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Bienvenido!</h1>
                </div>
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'user'} ) do |f| %>
                  <%= f.error_notification %>
                  <form class="users">
                    <div class="form-group">
                      <%= f.input :email,
                                  required: false,
                                  autofocus: true,
                                  input_html: { autocomplete: "email", class: "form-control form-control-user" }%>
                    </div>
                    <div class="form-group">
                      <%= f.input :password,
                                  required: false,
                                  input_html: { autocomplete: "password", class: "form-control form-control-user" } %>
                    </div>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox small">
                        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                      </div>
                    </div>
                    <a href="index.html" class="btn btn-primary btn-user btn-block">
                      Login
                    </a>
                <% end %>
                <hr>
                <div class="text-center">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>